@model IEnumerable<PatientBillingSystem.Models.Operatortbl>

@{
    ViewBag.Title = "Operators List";
    if (Session["userType"] == null)
    {
        Response.Redirect("~/User/Index");
    }
}

<div class="navbar  navbar-fixed-top ">
    <div class="container ">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav h3 lead text-uppercase">
                <li><a href="/User/Patient">@ViewBag.user</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Log out", "LogOut", "User")</li>
            </ul>
        </div>
    </div>
</div>

<h2>Operators List</h2>

<p>
    <a href="~/RegisterUser/operatorRegister">Add New Operator</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Operator_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.O_email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.O_address)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Operator_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O_email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.O_address)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Operator_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Operator_ID })
            </td>
        </tr>
    }

</table>

<div>
    <br />
</div>
<div class="form-group">
    <div class="col-md-offset-1 col-md-10 center-block">
        <a href="/User/Admin" class="btn btn-default" role="button">Go Back</a>
    </div>
</div>
<div>
    <br />
</div>