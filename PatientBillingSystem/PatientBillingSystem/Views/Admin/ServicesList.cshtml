@model IEnumerable<PatientBillingSystem.Models.servicesofferedtbl>

@{
    ViewBag.Title = "Operators List";
    if (Session["userType"] == null)
    {
        Response.Redirect("~/User/Index");
    }
}
<div class="navbar  navbar-fixed-top ">
    <div class="container ">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav h3 lead text-uppercase">
                <li><a href="/User/Patient">@ViewBag.user</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li>@Html.ActionLink("Log out", "LogOut", "User")</li>
            </ul>
        </div>
    </div>
</div>

<h2>Services Offered</h2>

<p>
    <a href="~/RegisterUser/servicesRegister">Add New Service</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Service_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost_Of_Service)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Service_Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost_Of_Service)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Service_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Service_ID })
            </td>
        </tr>
    }

</table>
<div>
    <br />
</div>
<div class="form-group">
    <div class="col-md-offset-1 col-md-10 center-block">
        <a href="/User/Admin" class="btn btn-default" role="button">Go Back</a>
    </div>
</div>
<div>
    <br />
</div>